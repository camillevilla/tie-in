<h1><%= @user.first_name %>'s Friends</h1>

<ul>
<% @user.friends.each do |friend| %>
	<li>
  	<button type="submit" name="submit_param" action="/friendships" class="link-button">
    	<%= friend.first_name %>
  	</button>
	</li>
<% end %>
</ul>


<form action="/users/<%= @user.id %>/find">
  <input type="text" name="email" placeholder="Email address">
  <input type="submit" value="Invite Friend">
</form>
