<div class="container">
  <div class="rows">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="brand-light-blue"><%=@trip.name%></h2>
        <h3 class="brand-orange-light">Add new accommodation</h3>
      </div>
      <div class="panel-body">
        <form id="new-accommodation-form" method="POST" action="/trips/<%=@trip.id %>/accommodations">
          <%= render "locations/new"%>
          <p><input type="datetime-local" name="accommodation[check_in]"></p>
          <p><input type="datetime-local" name="accommodation[check_out]"></p>
          <button class="btn" type="submit">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>



