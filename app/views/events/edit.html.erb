<h1>Edit event</h1>
<h2>Revise the details of your event</h2>
<% if @errors %>
  <ul>
  <% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for(@event, url: trip_event_path(@trip)) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area(:description, cols: 80, rows: 10) %>
  </div>
  <%= f.label :start_time %>
  <%= f.datetime_local_field :start_time %>
  <%= f.label :end_time %>
  <%= f.datetime_local_field :end_time %>
  <div>
    <!-- Add partial form for new location once location table is ready -->
    <%= f.label :location_id %>
    <%= f.number_field :location_id %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
