<div class="container">
  <div class="rows">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="brand-light-blue"><%= link_to @trip.name, trip_path(@trip) %></h2>
        <h3 class="brand-orange-light">Add new event</h3>
      </div>

      <div class="panel-body">
        <% if @errors %>
          <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
        <% end %>

        <%= form_for [@trip, @event] do |f| %>
        <div class="form-inputs">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.label :description %> <br>
            <%= f.text_area(:description, cols: 40) %>
          </div>
          <div class="form-group">
            <%= f.label :start_time %>
            <%= f.datetime_local_field :start_time %>
            <%= f.label :end_time %>
            <%= f.datetime_local_field :end_time %>
          </div>
          <div class="form-group">
            <div>Location:</div>
           <%= render "locations/new"%>
          </div>
          <div class="actions">
            <%= f.submit %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


