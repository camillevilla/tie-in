<div>
  <%=short_date(@trip.start_date)%> - <%=short_date(@trip.end_date)%><br>
  <%=@trip.location%>
</div>
<div>
  <a href="trips/<%= @trip.id %>/edit">Edit</a>
</div>
<div>
  <%=@trip.description%>
