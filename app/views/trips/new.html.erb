<div class="container">
  <div class="rows">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="brand-light-blue">Add new trip</h2>
      </div>

      <div class="panel-body">
        <h2 class="brand-orange-light">Tell us more about your trip</h2>
        <% if @errors %>
          <ul>
          <% @errors.each do |error| %>
            <li><%= error %></li>
          <% end %>
          </ul>
        <% end %>

        <%= form_for @trip do |f| %>
        <div class="panel-body">
          <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
  <div>
    <%= f.label :description %> <br>
    <%= f.text_area(:description, cols: 80, rows: 10) %>
  </div>
  <%= f.label :start_date %>
  <%= f.datetime_local_field :start_date %>
  <%= f.label :end_date %>
  <%= f.datetime_local_field :end_date %>
  <div>
    <div>Location:</div>
   <%= render "locations/new"%>
  </div>
  <div>
    <%= f.submit "Next:  Add friends" %>
  </div>
<% end %>

