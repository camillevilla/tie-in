<div class="container">
  <div id="mytrips" class="jumbotron">
    <h1 class="brand-yellow">Welcome, <%= @user.first_name %>!</h1>
    <h3 class="brand-orange">Your Trips</h3>
  </div>
  <div class="container">
    <div class="transitions-enabled" id="pins">
      <% @user_trips.each do |trip| %>
      <div class="box panel panel-default">
        <div class="panel-body">
          <h4><%= link_to (trip.name), trip %></h4>
        </div>
      </div>
      <% end %>
      <div class="box panel panel-default">
        <div class="panel-body">
        <h4><a href="/trips/new"><i class="fa fa-plus fa-1x" aria-hidden="true"></i> add a new trip</a></h4>
        </div>
      </div>
    </div>
  </div>
</div>

